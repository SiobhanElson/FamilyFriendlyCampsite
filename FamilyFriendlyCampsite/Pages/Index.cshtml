@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Family Friendly Campsite Webpage</h1>
    <style>
        table, th, td {
            border: 3px solid teal;
        }
        th, td {
            padding: 10px;
        }
        th {
            background-color: #add8e6;
        }
    </style>

    <table>
        <tr>
            <th>Title</th>
            <th>County</th>
            <th>Town</th>
            <th>Website</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Contact Name</th>
        </tr>
    @foreach (var campsite in Model.Campsites)
    {

        <tr>
            <td>
                <a asp-page="/@campsite.Title" target="_blank">@campsite.Title</a> 
            </td>
            <td>@campsite.LocationCounty</td>
            <td>@campsite.LocationTown</td>
            <td><a href="https://@campsite.ContactWebsite">@campsite.ContactWebsite</a></td>
            <td>@campsite.ContactPhone</td>
            <td>@campsite.ContactEmail</td>
            <td>@campsite.ContactName</td>
        </tr>
    }
    </table>
</div>
